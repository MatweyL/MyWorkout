<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="4dp"
    android:background="@color/main_background1"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tlExxxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_menu_in_train"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewExxxxxx"
                style="@style/appCommonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:padding="6dp"
                android:text="База упражнений"
                android:textAllCaps="true"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <SearchView
        android:id="@+id/searchExers"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"></SearchView>
    <ListView
        android:id="@+id/ListView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background1"
        android:scrollbarSize="20dp"></ListView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/main_background1"
    tools:context=".Matvey.myworkoutcreatingtrainsdemo.UpdateExercise">

    <TableLayout
        android:id="@+id/tlUpEx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/title_menu_in_train"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewUpEx"
                style="@style/appCommonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:padding="6dp"
                android:text="Редактирование"
                android:textAllCaps="true"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Введите название"
        android:inputType="textMultiLine"
        android:textColor="@color/textViewColor"
        android:textColorHint="@color/editTextColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save_exercise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Сохранить"
        style="@style/menuTextStyle"
        android:background="@drawable/button_save_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear4"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/textView10"
        style="@style/appCommonTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Название упражнения"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlUpEx" />

    <TextView
        android:id="@+id/textView11"
        style="@style/appCommonTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Количество потворений"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <Button
            android:id="@+id/button_m1u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            app:backgroundTint="@color/orange_for_button_inc_dec" />

        <EditText
            android:id="@+id/editTextNumberOfReps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Количество повторений"
            android:inputType="number"
            android:textColor="@color/textViewColor"
            android:textColorHint="@color/editTextColor" />

        <Button
            android:id="@+id/button_p1u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="+"
            app:backgroundTint="@color/orange_for_button_inc_dec" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <Button
            android:id="@+id/button_m2u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            app:backgroundTint="@color/orange_for_button_inc_dec" />

        <EditText
            android:id="@+id/editTextNumberOfSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Количество кругов"
            android:inputType="number"
            android:textColor="@color/textViewColor"
            android:textColorHint="@color/editTextColor" />

        <Button
            android:id="@+id/button_p2u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="+"
            app:backgroundTint="@color/orange_for_button_inc_dec" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <Button
            android:id="@+id/button_m3u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            app:backgroundTint="@color/orange_for_button_inc_dec" />

        <EditText
            android:id="@+id/editTextNumberOfWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Вес снаряда, (кг)"
            android:inputType="number"
            android:text="0"
            android:textColor="@color/textViewColor"
            android:textColorHint="@color/editTextColor" />

        <Button
            android:id="@+id/button_p3u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="+"
            app:backgroundTint="@color/orange_for_button_inc_dec" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <Button
            android:id="@+id/button_m4u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            app:backgroundTint="@color/orange_for_button_inc_dec" />

        <EditText
            android:id="@+id/editTextTimeOfRest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Время, (с)"
            android:inputType="number"
            android:textColor="@color/textViewColor"
            android:textColorHint="@color/editTextColor" />

        <Button
            android:id="@+id/button_p4u"
            style="@style/appTextStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="+"
            app:backgroundTint="@color/orange_for_button_inc_dec" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView12"
        style="@style/appCommonTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Количество кругов"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear1" />

    <TextView
        android:id="@+id/textView14"
        style="@style/appCommonTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Вес снаряда"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear2" />

    <TextView
        android:id="@+id/textView15"
        style="@style/appCommonTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_rest_after_set"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/delete"
        style="@style/menuTextStyle"
        android:background = "@drawable/button_delete_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_save_exercise" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myworkout">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWorkout">
        <activity android:name=".Matvey.myworkoutcreatingtrainsdemo.TrainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Matvey.myworkoutcreatingtrainsdemo.TrainExercisesActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Matvey.myworkoutcreatingtrainsdemo.TrainsListActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Matvey.myworkoutcreatingtrainsdemo.UpdateExercise"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Matvey.myworkoutcreatingtrainsdemo.Create_Exercise_Activity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Matvey.myworkoutcreatingtrainsdemo.Create_Train_Activity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".CountCalory"
            android:screenOrientation="portrait"/>
        <activity android:name=".ResetPassword"
            android:screenOrientation="portrait"/>
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".FoodActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Description_activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LogotypeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReadActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".AuthorizationActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>